<tr id="<%= dom_id(expense) %>">
  <td class="whitespace-nowrap px-3 py-2.5 text-sm font-medium text-gray-900"><%= expense.date %></td>
  <td class="whitespace-nowrap px-3 py-2.5 text-sm text-gray-500"><%= expense.step.name %></td>
  <td class="whitespace-nowrap px-3 py-2.5 text-sm text-gray-500"><%= expense.supplier.name %></td>
  <td class="whitespace-nowrap px-3 py-2.5 text-sm text-gray-500"><%= expense.description %></td>
  <td class="whitespace-nowrap px-3 py-2.5 text-sm text-gray-500"><%= expense.payment_method.name %></td>
  <td class="whitespace-nowrap px-3 py-2.5 text-sm text-gray-500"><%= format_amount(expense.amount) %></td>
  <td class="relative whitespace-nowrap px-3 py-2.5 text-right text-sm font-medium flex gap-4 justify-end">
    <%= link_to "Edit", edit_expense_path(expense), data: { turbo_frame: 'modal' }, class: 'text-indigo-600 hover:text-indigo-900' %>
    <%= link_to "Delete", expense_path(expense), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this expense?" }, class: 'text-red-600 hover:text-red-900' %>
  </td>
</tr>
